{
  "name": "as-stylus",
  "version": "1.0.0",
  "description": "SDK to build AssemblyScript contracts for Stylus",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "test-sdk": "dist/cli/build.js"
  },
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "generate": "tsc && tsc-alias && node dist/commands/generate/generate.js",
    "build": "tsc && tsc-alias && node dist/commands/build/build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "assemblyscript": "^0.27.35",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "keccak256": "^1.0.6",
    "ts-morph": "^25.0.1"
  }
}
