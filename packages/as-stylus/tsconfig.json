{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist/",
    "rootDir": "cli",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleDetection": "force",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["cli/**/*"]
}
